<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- DetailActivity menggunakan NoActionBar untuk CollapsingToolbar -->
        <activity
            android:name=".DetailActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- WatchlistActivity -->
        <activity
            android:name=".WatchlistActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="My Watchlist"
            android:parentActivityName=".MainActivity" />

        <!-- GenreActivity -->
        <activity
            android:name=".GenreActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Movie Genres"
            android:parentActivityName=".MainActivity" />

        <!-- FilmByGenreActivity -->
        <activity
            android:name=".FilmByGenreActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".GenreActivity" />

        <!-- ActorActivity -->
        <activity
            android:name=".ActorActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Popular Actors"
            android:parentActivityName=".MainActivity" />

        <!-- FilmsByActorActivity -->
        <activity
            android:name=".FilmsByActorActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ActorActivity" />

        <!-- MainActivity menggunakan NoActionBar karena kita menggunakan Toolbar kustom -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
