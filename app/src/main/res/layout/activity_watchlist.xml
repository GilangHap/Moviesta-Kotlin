<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_primary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/white"
        app:navigationIconTint="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="My Watchlist" />

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Quick Stats Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card_rounded"
                android:backgroundTint="@color/surface"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_watchlist_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Film Tersimpan"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="13sp"
                        android:alpha="0.8" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:background="?attr/colorOutlineVariant"
                    android:alpha="0.5" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_total_runtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0h"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimasi Durasi"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="13sp"
                        android:alpha="0.8" />

                </LinearLayout>

            </LinearLayout>

            <!-- Quick Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:visibility="visible"
                android:id="@+id/layout_quick_actions"
                android:gravity="center"
                android:paddingHorizontal="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sort_date"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="Terbaru"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    app:strokeColor="@color/text_secondary"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_schedule"
                    app:iconTint="@color/white"
                    app:iconSize="14dp"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sort_title"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="3dp"
                    android:text="A-Z"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    app:strokeColor="@color/text_secondary"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_sort"
                    app:iconTint="@color/white"
                    app:iconSize="14dp"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sort_rating"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="Rating"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    app:strokeColor="@color/text_secondary"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_star"
                    app:iconTint="@color/white"
                    app:iconSize="14dp"
                    app:iconGravity="textStart" />

            </LinearLayout>

            <!-- RecyclerView for Watchlist Items -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_watchlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="16dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                tools:listitem="@layout/item_watchlist" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Empty State Layout -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:background="@color/background"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0.6"
            android:src="@drawable/ic_bookmark_border"
            app:tint="@color/text_secondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Watchlist Kosong"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Belum ada film yang disimpan.\nMulai tambahkan film favorit Anda!"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_browse_films"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Jelajahi Film"
            android:textColor="@color/on_primary"
            app:backgroundTint="@color/primary"
            app:icon="@drawable/ic_explore"
            app:iconTint="@color/on_primary" />

    </LinearLayout>

    <!-- Loading Layout -->
    <LinearLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/background"
        android:visibility="gone">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:indicatorColor="@color/primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Memuat Watchlist..."
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>