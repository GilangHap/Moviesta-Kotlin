<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".DetailActivity">

    <!-- 1. APP BAR (Header Dinamis) dengan style baru -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/background">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@drawable/gradient_toolbar_background"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar"
            app:titleEnabled="false">

            <!-- Background Poster Besar -->
            <ImageView
                android:id="@+id/img_poster_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:transitionName="poster_transition"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

<!--             Enhanced gradient overlay-->
            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_detail_overlay" />

            <!-- Toolbar di atas -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- 2. SCROLL CONTENT (Data Film) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Movie Cover and Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:gravity="top">

                <!-- Movie Poster Cover -->
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/iv_movie_poster_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_movie_placeholder" />

                </androidx.cardview.widget.CardView>

                <!-- Film Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Judul Film -->
                    <TextView
                        android:id="@+id/tv_title_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@color/on_background"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        tools:text="Demon Slayer: Kimetsu no Yaiba"/>

                    <!-- Rating with Star -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star"
                            app:tint="@color/accent_color"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/tv_rating_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/accent_color"
                            android:textStyle="bold"
                            tools:text="8.5"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/10"
                            android:textSize="14sp"
                            android:textColor="@color/on_surface_variant"
                            android:layout_marginStart="2dp" />

                    </LinearLayout>

                    <!-- Release Date and Duration -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tv_release_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/on_surface_variant"
                            tools:text="Sep 2025" />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_marginHorizontal="8dp"
                            android:background="@drawable/bg_circle"
                            android:backgroundTint="@color/on_surface_variant" />

                        <TextView
                            android:id="@+id/tv_runtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/on_surface_variant"
                            tools:text="156 mins" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Genre Section -->
            <!-- Genre Section dengan style baru -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre"
                    android:textSize="18sp"
                    android:textColor="@color/on_background"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp"/>

                <!-- RecyclerView untuk Genre Chips -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_genres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:paddingStart="0dp"
                    android:paddingEnd="16dp"
                    tools:itemCount="3"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_genre_chip" />

            </LinearLayout>

            <!-- Action Buttons Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Watchlist Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_watchlist"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Tambah ke Watchlist"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_bookmark_border"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconSize="20dp" />

                <!-- Share Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_share"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Share Film"
                    app:icon="@drawable/ic_share"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="20dp" />

            </LinearLayout>

            <!-- Sinopsis Lengkap -->
            <TextView
                android:id="@+id/tv_sinopsis_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Sinopsis"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_sinopsis_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="4dp"
                tools:text="Ini adalah sinopsis lengkap dari film yang akan menceritakan perjalanan karakter utama yang penuh liku-liku dan kejutan."/>

            <!-- Label Aktor/Pemeran Utama -->
            <TextView
                android:id="@+id/tv_cast_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Pemeran Utama"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"/>

            <!-- RecyclerView Horizontal untuk Daftar Aktor -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:paddingBottom="16dp"
                android:orientation="horizontal"
                tools:itemCount="5"
                tools:orientation="horizontal"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_cast"/>

            <!-- Label Film Serupa -->
            <TextView
                android:id="@+id/tv_recommendations_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Film Serupa"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"/>

            <!-- RecyclerView Horizontal untuk Film Rekomendasi -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_recommendations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:paddingBottom="24dp"
                android:orientation="horizontal"
                tools:itemCount="5"
                tools:orientation="horizontal"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_recommendation"/>

            <!-- Loading State untuk Rekomendasi -->
            <LinearLayout
                android:id="@+id/layout_recommendations_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone"
                android:padding="16dp">

                <ProgressBar
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Memuat rekomendasi..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"/>

            </LinearLayout>

            <!-- Empty State untuk Rekomendasi -->
            <LinearLayout
                android:id="@+id/layout_no_recommendations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tidak ada rekomendasi film"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="italic"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Futuristic Floating Action Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_mark_watched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="Mark as Watched"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_eye_add"
        app:iconTint="@android:color/white"
        app:iconSize="24dp"
        app:backgroundTint="@color/accent_blue"
        app:cornerRadius="32dp"
        app:elevation="16dp"
        app:pressedTranslationZ="20dp"
        app:rippleColor="@color/white"
        app:strokeWidth="2dp"
        app:strokeColor="@color/accent_blue_light"
        android:padding="20dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:stateListAnimator="@animator/fab_state_list_animator"
        android:translationZ="12dp"
        android:shadowColor="@color/accent_blue"
        android:shadowDx="0"
        android:shadowDy="8"
        android:shadowRadius="16" />

    <!-- Secondary FAB for Watchlist (collapsed by default) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_watchlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:layout_marginBottom="110dp"
        android:src="@drawable/ic_bookmark_add"
        app:backgroundTint="@color/accent_purple"
        app:tint="@android:color/white"
        app:elevation="12dp"
        app:pressedTranslationZ="16dp"
        app:rippleColor="@color/white"
        app:borderWidth="0dp"
        app:fabSize="mini"
        android:visibility="gone"
        android:alpha="0"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:shadowColor="@color/accent_purple"
        android:shadowDx="0"
        android:shadowDy="6"
        android:shadowRadius="12" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
