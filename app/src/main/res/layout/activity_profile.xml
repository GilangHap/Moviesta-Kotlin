<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ProfileActivity">

    <!-- Modern AppBar with Gradient -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/gradient_profile_header"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/primary"
            app:expandedTitleTextAppearance="@android:color/transparent">

            <!-- Profile Header Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                app:layout_collapseMode="parallax">

                <!-- Profile Photo with Glow Effect -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="12dp"
                    app:strokeWidth="4dp"
                    app:strokeColor="@android:color/white">

                    <ImageView
                        android:id="@+id/iv_profile_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@color/surface_variant"
                        tools:src="@tools:sample/avatars" />

                </com.google.android.material.card.MaterialCardView>

                <!-- User Name -->
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="16dp"
                    android:shadowColor="@android:color/black"
                    android:shadowRadius="4"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    tools:text="John Doe" />

                <!-- User Email -->
                <TextView
                    android:id="@+id/tv_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="john.doe@email.com"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp"
                    android:alpha="0.9"
                    tools:text="john.doe@email.com" />

                <!-- Join Date -->
                <TextView
                    android:id="@+id/tv_join_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member since January 2024"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp"
                    android:alpha="0.8"
                    tools:text="Member since January 2024" />

                <!-- Account Type Badge -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/tv_account_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verified Account"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="12dp"
                    app:chipBackgroundColor="@color/success_primary"
                    app:chipIcon="@drawable/ic_verified"
                    app:chipIconTint="@android:color/white"
                    tools:text="Verified Account" />

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Loading State -->
    <LinearLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/background"
        android:visibility="visible">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:indicatorColor="@color/accent_primary"
            app:trackColor="@color/surface_variant" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading profile..."
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Statistics Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Watched Movies Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_watched_movies"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/accent_blue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_movie"
                            app:tint="@android:color/white"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_watched_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            tools:text="42" />

                        <TextView
                            android:id="@+id/tv_watched_movies_stat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Movies Watched"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:gravity="center"
                            tools:text="42 Movies Watched" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Favorite Genres Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_favorite_genres"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/accent_purple">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_star"
                            app:tint="@android:color/white"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_favorite_genres_stat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 Favorite Genres"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:gravity="center"
                            tools:text="5 Favorite Genres" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Watch Time Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_watch_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/warning_primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_access_time"
                            app:tint="@android:color/white"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_watch_time_stat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0h Watch Time"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:gravity="center"
                            tools:text="84h Watch Time" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Profile Details Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Favorite Genres Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_category"
                            app:tint="@color/accent_primary"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Favorite Genres"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_favorite_genres"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Action, Sci-Fi, Comedy"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="2dp"
                                tools:text="Action, Sci-Fi, Comedy" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Actions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Edit Profile Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Edit Profile"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        app:icon="@drawable/ic_edit"
                        app:iconGravity="start"
                        app:iconPadding="12dp"
                        app:cornerRadius="12dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <!-- Watch History Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_watch_history"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Watch History"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        app:icon="@drawable/ic_history"
                        app:iconGravity="start"
                        app:iconPadding="12dp"
                        app:cornerRadius="12dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <!-- Settings Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_settings"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Settings"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        app:icon="@drawable/ic_settings"
                        app:iconGravity="start"
                        app:iconPadding="12dp"
                        app:cornerRadius="12dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <!-- Share Profile Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_share"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Share Profile"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"
                        app:icon="@drawable/ic_share"
                        app:iconGravity="start"
                        app:iconPadding="12dp"
                        app:cornerRadius="12dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <!-- Logout Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_logout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Logout"
                        android:textSize="16sp"
                        android:textColor="@color/error_primary"
                        app:icon="@drawable/ic_logout"
                        app:iconGravity="start"
                        app:iconPadding="12dp"
                        app:iconTint="@color/error_primary"
                        app:strokeColor="@color/error_primary"
                        app:cornerRadius="12dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- App Info Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moviesta"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version 1.0.0"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.unsoed.moviesta.view.CustomBottomNavigation
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/transparent"
        android:elevation="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>