<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ProfileActivity">

    <!-- Loading State -->
    <LinearLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/background"
        android:visibility="visible">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:indicatorColor="@color/accent_primary"
            app:trackColor="@color/surface_variant" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading profile..."
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_profile_header"
                android:padding="32dp"
                android:gravity="center"
                android:minHeight="320dp">

                <!-- Profile Photo -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="3dp"
                    app:strokeColor="#FF8A3D">

                    <ImageView
                        android:id="@+id/iv_profile_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@color/surface_variant"
                        tools:src="@tools:sample/avatars" />

                </com.google.android.material.card.MaterialCardView>

                <!-- User Name -->
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GILANG HAPPY DWINUGROHO 1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="GILANG HAPPY DWINUGROHO 1" />

                <!-- Bio/Quote -->
                <TextView
                    android:id="@+id/tv_user_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I don't like to talk about myself.\nI prefer to talk about movies."
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:alpha="0.9"
                    android:lineSpacingExtra="2dp"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    tools:text="I don't like to talk about myself.\nI prefer to talk about movies." />

                <!-- Edit Profile Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="12dp"
                    app:cornerRadius="25dp"
                    app:strokeColor="#FF8A3D"
                    app:strokeWidth="2dp"
                    app:backgroundTint="#66FF8A3D"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

            <!-- Stats Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp">

                <!-- Watched Movies Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_watched_movies"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_movie"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_watched_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="243"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            tools:text="243" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Watched Movies"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Favorite Genres Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_favorite_genres"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_favorite_genres_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            tools:text="3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Favorite Genres"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Watchlist Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_watchlist"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_bookmark"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_watchlist_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="51"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            tools:text="51" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Watchlist"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Quick Actions Section -->
            <LinearLayout
                android:id="@+id/layout_quick_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Settings Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_settings"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Settings"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    app:icon="@drawable/ic_settings"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <!-- Share Profile Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_share"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Share Profile"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    app:icon="@drawable/ic_share"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <!-- Logout Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Logout"
                    android:textSize="16sp"
                    android:textColor="@color/error_primary"
                    android:layout_marginBottom="100dp"
                    app:icon="@drawable/ic_logout"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    app:iconTint="@color/error_primary"
                    app:strokeColor="@color/error_primary"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.unsoed.moviesta.view.CustomBottomNavigation
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>