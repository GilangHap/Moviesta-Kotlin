<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <!-- Background Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_nav_background"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- Genre Tab -->
        <LinearLayout
            android:id="@+id/nav_genre"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_genre"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/cinema"
                app:tint="@color/nav_icon_unselected" />

            <TextView
                android:id="@+id/label_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre"
                android:textColor="@color/nav_text_unselected"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- Actor Tab -->
        <LinearLayout
            android:id="@+id/nav_actor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_actor"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_actor"
                app:tint="@color/nav_icon_unselected" />

            <TextView
                android:id="@+id/label_actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actor"
                android:textColor="@color/nav_text_unselected"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- Empty Space for Home Button -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- History Tab -->
        <LinearLayout
            android:id="@+id/nav_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_history"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_history"
                app:tint="@color/nav_icon_unselected" />

            <TextView
                android:id="@+id/label_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textColor="@color/nav_text_unselected"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- Profile Tab -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/profile_user"
                app:tint="@color/nav_icon_unselected" />

            <TextView
                android:id="@+id/label_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/nav_text_unselected"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Floating Home Button -->
    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="13dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:elevation="24dp"
        android:outlineProvider="none"
        android:clipToPadding="false"
        android:clipChildren="false">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="?attr/colorPrimary"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/surface"
            app:strokeWidth="3dp">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_home_large"
                app:tint="@android:color/white" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/label_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/nav_text_selected"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>